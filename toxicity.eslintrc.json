{
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "complexity": [ "error", { "max": 10 } ],
    "default-case": ["error"],
    "max-depth": [ "error", { "max": 2 } ],
    "max-lines": [ "error", { "max": 500 } ],
    "max-nested-callbacks": [ "error", { "max": 3 } ],
    "max-params": [ "error", { "max": 5 } ],
    "max-statements": [ "error", { "max": 30 } ],

    "array-callback-return": ["off"],
    "arrow-body-style": ["off"],
    "arrow-spacing": ["off"],
    "block-scoped-var": ["off"],
    "block-spacing": ["off"],
    "brace-style": ["off"],
    "comma-dangle": ["off"],
    "comma-spacing": ["off"],
    "comma-style": ["off"],
    "consistent-return": ["off"],
    "dot-notation": ["off"],
    "eol-last": ["off"],
    "func-names": ["off"],
    "func-style": ["off"],
    "indent": ["off"],
    "key-spacing": ["off"],
    "keyword-spacing": ["off"],
    "no-cond-assign": ["off"],
    "no-console": ["off"],
    "no-else-return": ["off"],
    "no-empty": ["off"],
    "no-fallthrough": ["off"],
    "no-func-assign": ["off"],
    "no-multi-spaces": ["off"],
    "no-multiple-empty-lines": ["off"],
    "no-nested-ternary": ["off"],
    "no-redeclare": ["off"],
    "no-shadow": ["off"],
    "no-spaced-func": ["off"],
    "no-sparse-arrays": ["off"],
    "no-undef": ["off"],
    "no-unneeded-ternary": ["off"],
    "no-unsafe-finally": ["off"],
    "no-unused-vars": ["off"],
    "no-use-before-define": ["off"],
    "no-useless-escape": ["off"],
    "no-var": ["off"],
    "object-curly-spacing": ["off"],
    "object-shorthand": ["off"],
    "one-var": ["off"],
    "one-var-declaration-per-line": ["off"],
    "padded-blocks": ["off"],
    "prefer-arrow-callback": ["off"],
    "prefer-const": ["off"],
    "prefer-rest-params": ["off"],
    "prefer-template": ["off"],
    "quotes": ["off"],
    "quote-props": ["off"],
    "semi": ["off"],
    "semi-spacing": ["off"],
    "space-before-blocks": ["off"],
    "space-before-function-paren": ["off"],
    "space-infix-ops": ["off"],
    "space-in-parens": ["off"],
    "spaced-comment": ["off"],
    "strict": ["off"],
    "vars-on-top": ["off"],
    "wrap-iife": ["off"],
    "yoda": ["off"]
  }
}
